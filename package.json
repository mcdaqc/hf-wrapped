{
	"name": "hf-wrapped",
	"private": true,
	"scripts": {
		"build": "dotenv -c -- turbo build",
		"dev": "dotenv -c -- turbo dev --concurrency 15",
		"type-check": "dotenv -c -- turbo type-check",
		"start": "dotenv -c -- turbo start",
		"lint": "biome lint . ",
		"check": "biome check",
		"clean": "turbo clean",
		"format": "biome format . --write"
	},
	"engines": {
		"node": ">=20"
	},
	"packageManager": "pnpm@10.14.0",
	"devDependencies": {
		"@biomejs/biome": "2.3.9",
		"@repo/tsconfig": "workspace:*",
		"@types/node": "^25.0.2",
		"dotenv": "^17.2.3",
		"dotenv-cli": "^11.0.0",
		"tsx": "^4.21.0",
		"turbo": "^2.6.3",
		"typescript": "5.9.3"
	},
	"pnpm": {
		"overrides": {
			"@types/react": "19.2.2",
			"@types/react-dom": "19.2.2"
		},
		"onlyBuiltDependencies": [
			"@prisma/client",
			"@prisma/engines",
			"@swc/core",
			"prisma",
			"prisma-zod-generator",
			"sharp"
		]
	}
}
